<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anjith.bdayby5e"
    android:versionCode="1"
    android:versionName="1.5.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Bdayaction" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".AboutActivity"
            android:label="@string/anjith_sasindran"
            android:parentActivityName="com.anjith.bdayby5e.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity 
            android:name=".UpcomingActivity"
            android:label="@string/upcoming"
            android:parentActivityName="com.anjith.bdayby5e.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
