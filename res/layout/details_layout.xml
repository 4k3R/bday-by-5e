<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="vertical" >
    
    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/personname"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:gravity="center"/>
    
    <TextView android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/personbday"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:gravity="center"
        android:paddingBottom="12dp"/>
    
    <View android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@color/black"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/personday"
        android:paddingTop="12dp"
        android:paddingBottom="3dp"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personstarsign"
        android:textSize="20sp"
        android:paddingBottom="3dp"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personage"
        android:textSize="20sp"
        android:paddingBottom="3dp"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personnextdays"
        android:textSize="20sp"
        android:paddingBottom="3dp"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/persondaysold"
        android:textSize="20sp"
        android:paddingBottom="3dp"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personhour"
        android:textSize="20sp"
        android:paddingBottom="3dp"/>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personseconds"
        android:textSize="20sp"
        android:paddingBottom="3dp"/>
    
</LinearLayout>
